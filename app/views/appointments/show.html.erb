<header>
  <h3>Appointment Details</h3>
  <% if user_signed_in? && (current_user.admin? || current_user == @appointment.client) %>
    <ul class="actions">
      <li>
        <%= link_to "Edit Appointment", edit_appointment_path(@appointment), class: "edit" %>
      </li>
      <li>
        <%= link_to "Cancel Appointment", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure you want to cancel this appointment?" }, class: "cancel" %>
      </li>
    </ul>
  <% end %>
</header>

<p>date: <%= @appointment.date %></p>
<p>time: <%= @appointment.time %></p>
<% if @appointment.client %>
  <p>client: <%= @appointment.client.email %></p>
<% end %>
